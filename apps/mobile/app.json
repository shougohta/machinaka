{
  "expo": {
    "name": "まちなか",
    "slug": "machinaka",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "このアプリは近くの人との出会いを検知するためにBluetoothを使用します。",
        "NSBluetoothPeripheralUsageDescription": "このアプリは近くの人との出会いを検知するためにBluetoothを使用します。",
        "NSLocationWhenInUseUsageDescription": "すれ違い場所の記録のために位置情報を使用します。",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "バックグラウンドでのすれ違い検知のために位置情報を使用します。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_ADVERTISE",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "すれ違い検知のために位置情報を使用します。"
        }
      ]
    ]
  }
}
